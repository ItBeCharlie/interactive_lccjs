    lea r0, ask
    sout r0
    lea r0, buffer1    
    sin r0
    lea r1, hi
    sout r1
    lea r0, buffer1
    sout r0
    lea r1, period
    sout r1
    nl
    lea r1, ask2
    sout r1
    lea r1, buffer2
    sin r1
